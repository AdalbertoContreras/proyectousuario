<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagen_asesorImageView"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
           android:paddingLeft="10dp"
            android:background="@color/Gris3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adalberto Contreras Ospino"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:id="@+id/nombre_asesorTextView"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.9"/>
                <TextView
                    android:textColor="@color/White"
                    android:id="@+id/tipo_especialidadTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="Sexualidad"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_weight="0.1"
                    />

            </LinearLayout>


            <TextView
                android:textSize="12sp"
                android:textColor="@color/GrisOscuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ultimo mensaje"
                android:layout_marginBottom="10dp"
                android:id="@+id/ultimo_mensajeTextView"
                android:paddingLeft="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1992-09-12"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="9sp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/fecha_ultimo_mensajeTextView"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gris3"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        >

    </LinearLayout>

</LinearLayout>