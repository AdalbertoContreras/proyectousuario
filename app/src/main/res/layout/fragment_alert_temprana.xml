<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AlertTempranaFragment"
    android:background="@color/Gris3">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingLeft="@dimen/paddin_left"
      android:paddingRight="@dimen/paddin_left"
      android:paddingTop="5dp"
      android:paddingBottom="2dp"
      >

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="90dp"
              app:cardCornerRadius="6dp"
              android:elevation="20dp"
              app:cardUseCompatPadding="true"
              >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

              <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@color/GrisOscuro">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="EN CASO DE:"
                  android:gravity="center"
                  android:textColor="@color/White"
                  />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:gravity="bottom"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Abuso - Maltrato - Acoso - Violencia de Genero"
                      android:gravity="center"
                      android:textColor="@color/colorPrimaryDark"
                      />

              </LinearLayout>

              </LinearLayout>

          </android.support.v7.widget.CardView>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:weightSum="3">


                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:background="@color/GrisOscuro"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      />


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="PERMITENOS AYUDARTE"
              android:textColor="@color/GrisOscuro"
              android:paddingTop="10dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:paddingBottom="5dp"
              android:layout_weight="1"
              />


              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="@color/GrisOscuro"
                  android:orientation="horizontal"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"


              >


          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="560dp"
              app:cardCornerRadius="6dp"
              android:elevation="20dp"
              app:cardUseCompatPadding="true"

             >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/paddin_left"
                  android:paddingRight="@dimen/paddin_left"
                  android:paddingTop="8dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:paddingBottom="20dp"
                      android:paddingTop="10dp">


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Asunto:"
                          android:textColor="@color/colorPrimary"
                          android:layout_weight="0.80"
                          android:layout_gravity="center"
                          />

                      <Spinner
                          android:id="@+id/spinner"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.20"
                          android:layout_gravity="center"

                          />

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingBottom="10dp"
                      >

                      <LinearLayout
                          android:layout_width="fill_parent"
                          android:layout_height="1dp"
                          android:background="@color/Gris3"
                          android:orientation="horizontal" />
                  </LinearLayout>


              <android.support.design.widget.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  >

                  <android.support.design.widget.TextInputEditText
                      android:id="@+id/Username"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Nombre:"
                      android:textSize="14sp"
                      />
              </android.support.design.widget.TextInputLayout >

                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      >

                      <android.support.design.widget.TextInputEditText
                          android:id="@+id/Apellido"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Apellido:"
                          android:textSize="14sp"
                          />
                  </android.support.design.widget.TextInputLayout >

                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      >

                      <android.support.design.widget.TextInputEditText
                          android:id="@+id/Direccion"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="DirecciÃ³n:"
                          android:textSize="14sp"
                          />
                  </android.support.design.widget.TextInputLayout >

                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingBottom="30dp"
                      >

                      <android.support.design.widget.TextInputEditText
                          android:id="@+id/Telefono"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Telefono:"
                          android:textSize="14sp"
                          />
                  </android.support.design.widget.TextInputLayout >


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingBottom="10dp"
                      >

                      <LinearLayout
                          android:layout_width="fill_parent"
                          android:layout_height="1dp"
                          android:background="@color/Gris3"
                          android:orientation="horizontal" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="270dp"
                      android:orientation="vertical"

                      android:paddingRight="@dimen/paddin_left"
                      android:paddingTop="10dp"
                      android:paddingBottom="7dp">

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Descripcion:"
                          android:textColor="@color/colorPrimaryDark"
                          android:paddingBottom="10dp"

                          />

                      <android.support.design.widget.TextInputEditText
                          android:layout_width="match_parent"
                          android:layout_height="220dp"
                          android:textSize="12sp"
                          android:inputType="textMultiLine"
                          android:scrollbars = "vertical"
                          android:gravity="top"
                          android:hint="DescripciÃ³n:"
                          />

                  </LinearLayout>




              </LinearLayout>

          </android.support.v7.widget.CardView>


          </LinearLayout>



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="5dp"
              android:paddingBottom="@dimen/paddin_left"
             >
          <Button
              android:id="@+id/Login"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="ENVIAR ALERTA"
              android:theme="@style/Button"

              />

          </LinearLayout>

      </LinearLayout>


      </ScrollView>



  </LinearLayout>
</FrameLayout>